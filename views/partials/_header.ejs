<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
    
        <div class="navbar-header">
            <a class="navbar-brand" href="#">
                <span class="welcome-header">&#x2728; Welcome to TinyApp!</span>
                
            </a></br>
            <% if (isLoggedIn) { %>
            <a class="navbar-brand">Hello, <%= user.email %></a>
            <form class="navbar-brand" action="/logout" method="POST">
                <input type="submit" value="Logout">
            </form>
            <% } else { %>
            <form class="navbar-brand" action="/login" method="POST">
                <label for="username">Enter your username</label>
                <input id="username" type="text" name="username">
                <input type="submit" value="Login">
            </form></br>
            <a href="/register" >Or register here..</a>
            <% } %>
            
        </div>
    
    </div>
    </nav>