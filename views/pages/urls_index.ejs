<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <title>TinyApp</title>
    <% include ../partials/_head %>
    <link rel='stylesheet' href='/styles/style.css' />
</head>
<body class="container">

<header>
    <% include ../partials/_header %>
</header>

<main>
    <ul>
   <% for(shortURL in urls) { %>
    <li class="urls"><%= shortURL %> : <%= urls[shortURL] %>
    <form method="POST" action="/urls/<%= shortURL %>/delete"><button class="btn">Delete &#x1F680;</button>
    </form>
    </li>
    <% } %>
    </ul>

    <a href="/urls/new" >Shorten a URL here</a>

</main>

<footer>
    <% include ../partials/_footer %>
</footer>

</body>
</html>